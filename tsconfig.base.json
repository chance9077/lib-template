{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES2015",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "lib-template/*": ["./*"],
      "lib/*": ["./src/lib/*"],
      "@/*": ["./src/*"],
      "*": [
        "*",
        "node_modules/*"
      ]
    }
  }
}